extends ../base

block content 
    video(src="/" + video.fileURL controls=true)

    div(class="flex flex-col")
        span title : #{video.title}
        span description : #{video.description}
        span createdAt : #{video.createdAt}
        span views : #{video.meta.views}
        span owner : #{video.owner.email}

    if String(video.owner._id) === String(localUser._id)
        a(href=`/video/${video._id}/delete`) 삭제하기