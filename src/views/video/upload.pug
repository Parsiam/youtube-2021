extends ../base

block script 
    script(defer src="/static/js/recorder.js") 

block content 
    div(class="border w-1/3 mx-auto text-center bg-red-600 text-white py-4 rounded-md text-lg font-medium cursor-pointer hover:opacity-80 transition-opacity mb-10")#toggleBtn 짧은 동영상 녹화하기
    div.hidden#recordContainer
        video.mx-auto
        button(class="block border w-1/4 mx-auto text-center bg-blue-600 text-white py-4 rounded-md text-lg font-medium cursor-pointer hover:opacity-80 transition-opacity my-10")#recordBtn 시작
    form(method="POST" enctype="multipart/form-data").form
        label(for="video").label 동영상
        input(type="file" name="video" accept="video/*" required id="video").input
        label(for="thumbnail").label 미리보기 이미지
        input(type="file" name="thumbnail" accept="image/*" required id="thumbnail").input
        label(for="title").label 제목
        input(type="text" placeholder="눈길을 끄는 제목으로 시청자의 관심을 유도할 수 있습니다." name="title" required id="title" maxLength=80).input
        label(for="description").label 설명
        input(type="text" placeholder="시청자에게 동영상에 대해 알려주세요." name="description" required id="description" maxLength=500).input
        label(for="hashtags").label 태그
        input(type="text" placeholder="각 태그의 뒤에 쉼표를 입력하세요." name="hashtags" id="hashtags").input
        button.submitBtn 동영상 업로드
